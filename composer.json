{
    "name": "skeleton/php-app",
    "description": "A PHP skeleton application",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always tests",
        "cs-fix": "php-cs-fixer fix --diff --verbose",
        "cs-check": "php-cs-fixer fix --dry-run --diff --verbose"
    }
}
